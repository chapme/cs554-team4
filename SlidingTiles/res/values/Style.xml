<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">
  <style name="GridStyle" parent="android:Theme">
      <item name="android:buttonStyle">@style/GridButton</item>
      <item name="android:background">@color/darkorange</item>
      <item name="android:layout_height">wrap_content</item>
      <item name="android:layout_width">wrap_content</item>
      <item name="android:layout_gravity">center_horizontal</item>
      <item name="android:layout_margin">3dp</item>
  </style>  
  <style name="GridStyleAI" parent="@style/GridStyle">
      
  </style>
  <style name="GridButton" parent="android:style/Widget.Button">
      <item name="android:textSize">20dp</item>
      <item name="android:layout_height">50dp</item>
      <item name="android:layout_width">50dp</item>
      <item name="android:padding">0dp</item>
      <item name="android:layout_margin">0dp</item>
      <item name="android:background">@drawable/tilebackground</item>
      <item name="android:textColor">@color/salmon</item>
  </style>
  <style name="GridButtonAI" parent="@style/GridButton">
      <item name="android:layout_height">32dp</item>
      <item name="android:layout_width">32dp</item> 
      <item name="android:textSize">14dp</item>   
  </style>
  <style name="BackButton">
      <item name="android:textSize">12dp</item>
      <item name="android:background">@drawable/backarrowblue</item>
      <item name="android:layout_height">wrap_content</item>
      <item name="android:layout_width">wrap_content</item>
      <item name="android:layout_margin">3dp</item>
      <item name="android:layout_marginBottom">3dp</item>
      <item name="android:textColor">@color/pink</item>
      <item name="android:textStyle">bold</item>
  </style>
  <style name="BackgroundLinearLayout">
      <item name="android:background">@drawable/backgroundstar</item>
      <item name="android:layout_width">match_parent</item>
      <item name="android:layout_height">match_parent</item>
      <item name="android:orientation">vertical</item>
  </style>
  <style name="PointsTextArea">
      <item name="android:layout_width">fill_parent</item>
      <item name="android:layout_height">wrap_content</item>
      <item name="android:padding">10dp</item>
      <item name="android:textColor">@color/lightpink</item>
      <item name="android:textStyle">bold</item>
      <item name="android:textSize">18dp</item>
  </style>
  <style name="EquationTextArea">
      <item name="android:layout_width">fill_parent</item>
      <item name="android:layout_height">wrap_content</item>
      <item name="android:textColor">@color/purple</item>
      <item name="android:textStyle">bold</item>
      <item name="android:textSize">18dp</item>
      <item name="android:padding">10dp</item>
      <item name="android:maxLines">6</item>
      <item name="android:scrollbars">vertical</item>
      <item name="android:scrollbarAlwaysDrawVerticalTrack">true</item>
      <item name="android:scrollbarFadeDuration">0</item>
  </style>
  <style name="AILabel">
      <item name="android:layout_width">wrap_content</item>
      <item name="android:layout_height">wrap_content</item>
      <item name="android:textStyle">bold</item>
      <item name="android:layout_gravity">center_horizontal</item>
      <item name="android:textColor">@color/lime</item>
      <item name="android:textSize">14dp</item>
  </style>
  <style name="WinnerTextArea">
      <item name="android:layout_width">wrap_content</item>
      <item name="android:layout_height">wrap_content</item>
      <item name="android:textSize">20dp</item>
      <item name="android:textStyle">bold</item>
      <item name="android:layout_gravity">center_horizontal</item>
      <item name="android:textColor">@color/pink</item>
  </style>
  <style name="OptionsMenuLabel">
      <item name="android:layout_width">wrap_content</item>
      <item name="android:layout_height">wrap_content</item>
      <item name="android:textSize">20dp</item>
      <item name="android:textStyle">bold</item>
      <item name="android:textColor">@color/pink</item>
      <item name="android:paddingTop">10dp</item>
      <item name="android:paddingLeft">10dp</item>
  </style>
  <style name="OptionsMenuRadioButtons">
      <item name="android:layout_width">wrap_content</item>
      <item name="android:layout_height">wrap_content</item>
  </style>
  <style name="OptionsMenuRadioGroup">
      <item name="android:paddingTop">5dp</item>
      <item name="android:paddingLeft">10dp</item>
      <item name="android:layout_width">wrap_content</item>
      <item name="android:layout_height">wrap_content</item>
  </style>
  <style name="StartGameButton">
      <item name="android:background">@null</item>
      <item name="android:layout_width">wrap_content</item>
      <item name="android:layout_height">wrap_content</item>
      <item name="android:textSize">24dp</item>
      <item name="android:textStyle">bold</item>
      <item name="android:textColor">@color/lime</item>
      <item name="android:padding">10dp</item>
  </style>
</resources>