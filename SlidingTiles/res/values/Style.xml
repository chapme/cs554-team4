<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">
  <style name="GridStyle" parent="android:Theme">
      <item name="android:buttonStyle">@style/GridButton</item>
      <item name="android:background">@color/darkorange</item>
      <item name="android:layout_height">wrap_content</item>
      <item name="android:layout_width">wrap_content</item>
      <item name="android:layout_gravity">center_horizontal</item>
      <item name="android:layout_margin">3dp</item>
  </style>  
  <style name="GridStyleAI" parent="@style/GridStyle">
      
  </style>
  <style name="GridButton" parent="android:style/Widget.Button">
      <item name="android:textSize">20dp</item>
      <item name="android:layout_height">50dp</item>
      <item name="android:layout_width">50dp</item>
      <item name="android:padding">0dp</item>
      <item name="android:layout_margin">0dp</item>
      <item name="android:background">@drawable/tilebackground</item>
  </style>
  <style name="GridButtonAI" parent="@style/GridButton">
      <item name="android:layout_height">34dp</item>
      <item name="android:layout_width">34dp</item> 
      <item name="android:background">@drawable/tilebackground</item>     
  </style>
  <style name="BackButton">
      <item name="android:textSize">12dp</item>
      <item name="android:background">@drawable/backarrow</item>
      <item name="android:layout_height">wrap_content</item>
      <item name="android:layout_width">wrap_content</item>
      <item name="android:layout_margin">3dp</item>
      <item name="android:layout_marginBottom">3dp</item>
  </style>
  <style name="BackgroundLinearLayout">
      <item name="android:background">@drawable/backgroundstar</item>
  </style>
</resources>